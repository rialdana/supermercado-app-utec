<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp">

        <TextView
            android:id="@+id/textView_hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/secondaryDarkColor"
            tools:text="@string/hello" />

        <TextView
            android:id="@+id/textView_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/primaryDarkColor"
            tools:text="@string/message" />

        <TextView
            android:id="@+id/textView_categories_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/primaryDarkColor"
            tools:text="@string/categories" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/button_add_categories"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/edges_oval"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="+"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView_address_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/primaryDarkColor"
            tools:text="@string/address" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/button_add_address"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edges_rectangle"
            android:backgroundTint="@android:color/holo_red_dark"
            android:gravity="center_horizontal"
            android:paddingHorizontal="80dp"
            android:paddingVertical="5dp"
            android:text="+"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>